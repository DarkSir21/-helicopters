  .container-fluid
    .top-bar.row.middle-xs.between-xs
      nav.second-menu
        a(href="#" class="link") О компании
        a(href="#" class="link") Бренды
        a(href="#" class="link") Доставка
        a(href="#" class="link") Информация

      a(href="#").btn
        .icon.-red-bg
          include ../static/icons/percentage.svg
        .link.-yellow-bg.-center Распродажа

      .input-search
        input(type="text" placeholder="Искать товар по названию").input
