      a(href="#").btn
        .icon.-red-bg.-cart
          include ../static/icons/shopping-cart.svg
        .link.-yellow-bg.-center
          .count 2 товара на&nbsp;
          .price 780 829 <span class="currency">Р</span>


  .container-fluid
    .row.between-xs.middle-xs
      
      .logo
        img(src="images/logo-lg.png", alt="Логотип")

      .top-bar-second
        nav.main-menu
          .link.catalog Каталог
            .wrapper
              - var n = 0;
                while n < 12
                  a(href="#").item
                    .image
                      img(src="images/helic.jpg")
                    .title Квадрокоптеры
                  - n++
          a(href="#").link Сравнение
          a(href="#").link Отзывы
        
        .btn-wrap
          a(href="#").btn
            .icon.-mr.-flex-center
              img(src="icons/marks.png")
            .link.-col.-start
              .link-item.-lg г. Санкт-Петербург
              .link-item.-small.-brown.-underline Выбрать город доставки

          a(href="#").btn
            .icon.-mr.-flex-center
              img(src="icons/phone.png")
            .link.-col.-start
              .link-item.-lg 8 800 775 3106
              .link-item.-small.-brown.-underline Поможем выбрать | звонок бесплатный